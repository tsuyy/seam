<!DOCTYPE html>
<html>
  <head>
    <title>Seam: Collaborate together, collaborate seamlessly</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= favicon_link_tag 'favicon.ico' %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class='ui sidebar right vertical menu'>
      <%= link_to '/features', {class: 'ui item'} do %>
        Features
      <% end %>
      <%= link_to '/pricing', {class: 'ui item'} do %>
        Pricing
      <% end %>
      <%= link_to '/customers', {class: 'ui item'} do %>
        Customers
      <% end %>
      <%= link_to '/user_stories', {class: 'ui item'} do %>
        User Stories
      <% end %>
      <%= link_to '/contact', {class: 'ui item'} do %>
        Contact
      <% end %>
    </div>
    <div class='pusher'>
      <%= render 'layouts/nav' %>
      <%= yield %>
      <div class='ui divider'></div>
      <%= render 'layouts/footer' %>
    </div>
  </body>
</html>
